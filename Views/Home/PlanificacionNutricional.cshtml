
@{
    ViewBag.Title = "PlanificacionNutricional";
}

<h2>PlanificacionNutricional</h2>

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Tabla de Bootstrap con Entrada de Datos</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark">
        <div class="container">
            @Html.ActionLink("Panel Nutricional", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Alternar navegación" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">

                    <li>@Html.ActionLink("ValoresNutricionales", "ValoresNutricionales", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("DatosAntropometricos", "DatosAntropometricos", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Planificacion Nutricional", "PlanificacionNutricional", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Plan de alimentacion", "PLanDeAlimentacion", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container mt-5">
        <h2>Tabla de Planificación Nutricional</h2>
        <button class="btn btn-primary mb-3" data-bs-toggle="modal" data-bs-target="#crearPlanificacionModal">Crear Planificación Nutricional</button>

        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Calculos</th>
                    <th>Distribución de Macronutrientes</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                <!-- Aquí puedes agregar dinámicamente las filas con datos ingresados -->
            </tbody>
        </table>
    </div>

    <!-- Modal para Crear Planificación Nutricional -->
    <div class="modal fade" id="crearPlanificacionModal" tabindex="-1" aria-labelledby="crearPlanificacionModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="crearPlanificacionModalLabel">Crear Planificación Nutricional</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <!-- Formulario para ingresar datos -->
                    <form id="crearPlanificacionForm">
                        <div class="mb-3">
                            <label for="calculos" class="form-label">Calculos:</label>
                            <input type="text" class="form-control" id="calculos" required>
                        </div>
                        <div class="mb-3">
                            <label for="distribucionMacronutrientes" class="form-label">Distribución de Macronutrientes:</label>
                            <input type="text" class="form-control" id="distribucionMacronutrientes" required>
                        </div>
                        <button type="button" class="btn btn-primary" onclick="guardarPlanificacionNutricional()">Guardar</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function guardarPlanificacionNutricional() {
            const calculos = document.getElementById('calculos').value;
            const distribucionMacronutrientes = document.getElementById('distribucionMacronutrientes').value;

            // Validación de datos (puedes agregar más validaciones según tus necesidades)

            // Agregar la fila a la tabla
            const tableBody = document.querySelector('table tbody');
            const newRow = document.createElement('tr');
            newRow.innerHTML = `
                <td>${calculos}</td>
                <td>${distribucionMacronutrientes}</td>
                <td>
                     <button class="btn btn-success" onclick="crearPlanAlimentacion(1)">Modificar</button>
 <button class="btn btn-danger" onclick="crearPlanAlimentacion(1)">Eliminar</button>

                </td>
            `;
            tableBody.appendChild(newRow);

            // Limpiar el formulario y cerrar el modal
            document.getElementById('crearPlanificacionForm').reset();
            document.getElementById('crearPlanificacionModal').modal('hide');
        }
    </script>
</body>
</html>
