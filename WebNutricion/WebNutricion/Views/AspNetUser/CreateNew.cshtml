@model WebNutricion.Models.valoresNutricionale

@{
    ViewBag.Title = "CreateNew";
}
<body>
    <div class="container">
    <div style="margin-top: 100px;"></div>
    <header>
        <h1>Editar Valores Nutricionales</h1>
    </header>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Valores Nutricionales</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <texto>Motivo</texto>
            <div class="col-md-10">
                @Html.EditorFor(model => model.motivo, new { htmlAttributes = new { @class = "form-control", @Value = ViewBag.Motivo } })
                @Html.ValidationMessageFor(model => model.motivo, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />

        <div class="form-group">
            <texto>Expectativas</texto>
            <div class="col-md-10">
                @Html.EditorFor(model => model.expectativas, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.expectativas, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />

        <div class="form-group">
            <texto>Informacion de consulta</texto>
            <div class="col-md-10">
                @Html.EditorFor(model => model.informacionConsulta, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.informacionConsulta, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />

        <div class="form-group">
            <texto>Historial</texto>
            <div class="col-md-10">
                @Html.EditorFor(model => model.historial, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.historial, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />

        <div class="form-group">
            <texto>Fecha</texto>
            <div class="col-md-10">
                @Html.EditorFor(model => model.fecha, new { htmlAttributes = new { @class = "form-control", @Value = DateTime.Now.ToShortDateString() } })
                @Html.ValidationMessageFor(model => model.fecha, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />
        <div class="form-group">
            @Html.LabelFor(model => model.idUser, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.idUser, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.idUser, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-lg btn-primary btn-block" style="background-color: #26798e; border-color: #26798e;" />
            </div>
        </div>
    </div>

}
    </div>
    </body>


    <style>
        body {
            background-image: url('../../webstylemain/assets/img/logos/nutricion-activa.jpg');
            background-size: cover;
            background-repeat: no-repeat;
            background-position: center;
        }

        h1 {
            font-size: 3em;
            font-weight: 300;
            line-height: 1em;
            text-align: center;
            color: #26798E;
            margin-bottom: 40px;
        }

        .container th h1 {
            font-weight: bold;
            font-size: 1em;
            text-align: left;
            color: #26798E;
        }

