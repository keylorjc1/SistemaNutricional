<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <title>Citas Disponibles</title>
</head>
<body>

    <div class="container mt-4">
        <h2>Citas Disponibles</h2>

        <div class="row">
            <div class="col-md-6">
                <h3>Lista de Citas</h3>
                <ul id="citasList" class="list-group">
                    <li class="list-group-item">
                        <span class="font-weight-bold">Fecha:</span> 2023-12-01
                        <span class="ml-3 font-weight-bold">Hora:</span> 10:00 AM
                        <button type="button" class="btn btn-primary">Seleccionar Horario</button>

                    </li>
            
                </ul>
            </div>

            <div class="col-md-6">
                <h3>Detalles de la Cita</h3>
                <form>
                    <div class="form-group">
                        <label for="fecha">Fecha:</label>
                        <input type="date" class="form-control" id="fecha" value="2023-01-01">
                    </div>

                    <div class="form-group">
                        <label for="hora">Hora:</label>
                        <input type="time" class="form-control" id="hora" value="7:00">
                    </div>
                    <button type="button" class="btn btn-warning btn-sm">Agendar Cita</button>
                </form>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <script>
        citasList.addEventListener('click', function (event) {
            var listItem = event.target.closest('li');
            if (listItem) {
                var fecha = listItem.querySelector('.font-weight-bold:nth-child(1)').nextSibling.nodeValue.trim();
                var hora = listItem.querySelector('.font-weight-bold:nth-child(3)').nextSibling.nodeValue.trim();

                document.getElementById('fecha').value = fecha;
                document.getElementById('hora').value = hora;
            }
        });
    </script>
    <div class="container mt-4">
        <h2>Horario de Citas Reservadas</h2>

        <div class="row">
            <div class="col-md-6">
                <h3>Lista de Citas Reservadas</h3>
                <ul id="citasReservadasList" class="list-group">
                    <li class="list-group-item">
                        <span class="font-weight-bold">Fecha:</span> 2023-12-01
                        <span class="ml-3 font-weight-bold">Hora:</span> 10:00 AM
                        <button type="button" class="btn btn-danger btn-sm float-right" onclick="eliminarCita(this)">Eliminar Cita</button>
                    </li>
                    
                </ul>
                <button type="button" class="btn btn-primary mt-3" onclick="verCitasReservadas()">Ver Citas Reservadas</button>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <script>
        var citasReservadas = [
            { fecha: '2023-12-02', hora: '2:30 PM' },
            { fecha: '2023-12-03', hora: '11:00 AM' },
        ];

        var citasReservadasList = document.getElementById('citasReservadasList');
        citasReservadas.forEach(function (cita) {
            var listItem = document.createElement('li');
            listItem.className = 'list-group-item';
            listItem.innerHTML = `<span class="font-weight-bold">Fecha:</span> ${cita.fecha}
                              <span class="ml-3 font-weight-bold">Hora:</span> ${cita.hora}
                              <button type="button" class="btn btn-danger btn-sm float-right" onclick="eliminarCita(this)">Eliminar Cita</button>`;
            citasReservadasList.appendChild(listItem);
        });

        function verCitasReservadas() {
            var primeraCita = citasReservadasList.querySelector('li');

            if (primeraCita) {
                var fechaReservada = primeraCita.querySelector('.font-weight-bold:nth-child(1)').nextSibling.nodeValue.trim();
                var horaReservada = primeraCita.querySelector('.font-weight-bold:nth-child(3)').nextSibling.nodeValue.trim();

                document.getElementById('fechaReservada').value = fechaReservada;
                document.getElementById('horaReservada').value = horaReservada;
            } else {
                alert('No hay citas reservadas para mostrar.');
            }
        }

        function eliminarCita(btnEliminar) {
            var citaReservada = btnEliminar.parentNode;
            citaReservada.parentNode.removeChild(citaReservada);
        }
    </script>
</body>
</html>
