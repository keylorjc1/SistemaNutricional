@model WebNutricion.Models.AspNetUser

@{
    ViewBag.Title = "Index";
}

        <section class="section">
            <div class="row">
                <div class="col-lg-12">

                    <div class="card">
                        <div class="card-body">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Email</th>
                                        <th>User Name</th>
                                        <th>Nombre</th>
                                        <th>Apellidos</th>
                                        <th>Telefono</th>
                                        <th>Cédula</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>@Html.DisplayFor(model => model.Email)</td>
                                        <td>@Html.DisplayFor(model => model.UserName)</td>
                                        <td>@Html.DisplayFor(model => model.Nombre)</td>
                                        <td>@Html.DisplayFor(model => model.Apellidos)</td>
                                        <td>@Html.DisplayFor(model => model.Telefono)</td>
                                        <td>@Html.DisplayFor(model => model.Cedula)</td>
                                        <td>
                                            <div style="display: flex; gap: 10px;">
                                                @using (Html.BeginForm("ShowDiet", "User", FormMethod.Get))
                                                {
                                                    <div class="form-group">
                                                        <input type="hidden" value="@Model.Id" name="id" class="form-control" />
                                                    </div>
                                                    <button type="submit" class="btn btn-primary">Dieta </button>
                                                }
                                                @using (Html.BeginForm("ShowProgress", "User", FormMethod.Get))
                                                {
                                                    <div class="form-group">
                                                        <input type="hidden" value="@Model.Id" name="id" class="form-control" />
                                                    </div>
                                                    <button type="submit" class="btn btn-primary">Mi Progreso</button>
                                                }
                                            </div>
                                        </td>
                        </tr>
                        </tbody>
                        </table>
                    </div>
                    </div>
                </div>
            </div>
        </section>
