@model WebNutricion.Models.RegisterViewModel

@{
    Layout = null; // Esto elimina el diseño predeterminado
}


<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/WebStyleMain/RegisterForm/fonts/icomoon/style.css">

    <link rel="stylesheet" href="~/WebStyleMain/RegisterForm/css/owl.carousel.min.css">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/WebStyleMain/RegisterForm/css/bootstrap.min.css">

    <!-- Style -->
    <link rel="stylesheet" href="~/WebStyleMain/RegisterForm/css/style.css">
</head>
<body>


    <div class="d-lg-flex half">
        <div class="bg order-1 order-md-2" style="background-image: url('/WebStyleMain/RegisterForm/images/pexels-filipp-romanovski.jpg');"></div>
        <div class="contents order-2 order-md-1">

            <div class="container">
                <div class="row align-items-center justify-content-center">
                    <div class="col-md-7">
                        <h3 class="mb-4">Registar clientes - <strong>NUTRICIÓN MANUEL SANABRIA</strong></h3>

                        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                    <div class="form">
                        <div class="form-group first">
                            @Html.LabelFor(m => m.Email, "Correo Electrónico")
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "tuCorreo@gmail.com" })
                        </div>

                        <div class="form-group last mb-3">
                            @Html.LabelFor(m => m.Nombre, "Nombre")
                            @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control", placeholder = "Primer Nombre" })
                        </div>

                        <div class="form-group last mb-3">
                            @Html.LabelFor(m => m.Apellidos, "Apellidos")
                            @Html.TextBoxFor(m => m.Apellidos, new { @class = "form-control", placeholder = "Apellidos" })
                        </div>

                        <div class="form-group last mb-3">
                            @Html.LabelFor(m => m.Telefono, "Teléfono")
                            @Html.TextBoxFor(m => m.Telefono, new { @class = "form-control", placeholder = "Telefono" })
                        </div>

                        <div class="form-group last mb-3">
                            @Html.LabelFor(m => m.Cedula, "Cédula")
                            @Html.TextBoxFor(m => m.Cedula, new { @class = "form-control", placeholder = "Cedula" })
                        </div>

                        <div class="form-group last mb-3">
                            @Html.LabelFor(m => m.Password, "Contraseña")
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Contraseña" })
                        </div>

                        <div class="form-group last mb-3">
                            @Html.LabelFor(m => m.ConfirmPassword, "Contraseña")
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Confirmar Contraseña" })
                        </div>

                        <div class="input-box">
                            @Html.LabelFor(m => m.Rol)
                            @Html.DropDownListFor(m => m.Rol, new SelectList(ViewBag.Roles, "Id", "Name"),
                                                              "-- Seleccione un Rol --", new { @class = "form-control" })
                        </div>
                        <div class="social d-flex text-center">
                            <a href="@Url.Action("Index", "Home")" class="px-2 py-2 mr-md-1 rounded"><span class="ion-logo-facebook mr-2"></span> Regresar</a>
                        </div>

                        <input type="submit" value="Registrarse" class="btn btn-block btn-primary">


                    </div>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>



    <script src="~/WebStyleMain/RegisterForm/js/jquery-3.3.1.min.js"></script>
    <script src="~/WebStyleMain/RegisterForm/js/popper.min.js"></script>
    <script src="~/WebStyleMain/RegisterForm/js/bootstrap.min.js"></script>
    <script src="~/WebStyleMain/RegisterForm/js/main.js"></script>
</body>
</html>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


