
@{
    ViewBag.Title = "ValoresNutricionales";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Tabla de Bootstrap con Entrada de Datos</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark">
        <div class="container">
            @Html.ActionLink("Panel Nutricional", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Alternar navegación" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">

                    <li>@Html.ActionLink("ValoresNutricionales", "ValoresNutricionales", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("DatosAntropometricos", "DatosAntropometricos", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Planificacion Nutricional", "PlanificacionNutricional", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Plan de alimentacion", "PLanDeAlimentacion", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container mt-5">
        <h2>Tabla de Consulta</h2>
        <button class="btn btn-primary mb-3" data-bs-toggle="modal" data-bs-target="#crearValoracionModal">Crear Valoración</button>

        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Informacion de la consulta</th>
                    <th>Historial Medico y Personal</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>

    <!-- Modal para Crear Valoración -->
    <div class="modal fade" id="crearValoracionModal" tabindex="-1" aria-labelledby="crearValoracionModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="crearValoracionModalLabel">Crear Valoración</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <!-- Formulario para ingresar datos -->
                    <form id="crearValoracionForm">
                        <div class="mb-3">
                            <label for="informacionConsulta" class="form-label">Información de la consulta:</label>
                            <input type="text" class="form-control" id="informacionConsulta" required>
                        </div>
                        <div class="mb-3">
                            <label for="historialMedico" class="form-label">Historial Médico y Personal:</label>
                            <input type="text" class="form-control" id="historialMedico" required>
                        </div>
                        <button type="button" class="btn btn-primary" onclick="guardarValoracion()">Guardar</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function guardarValoracion() {
            const informacionConsulta = document.getElementById('informacionConsulta').value;
            const historialMedico = document.getElementById('historialMedico').value;

            // Validación de datos (puedes agregar más validaciones según tus necesidades)

            // Agregar la fila a la tabla
            const tableBody = document.querySelector('table tbody');
            const newRow = document.createElement('tr');
            newRow.innerHTML = `
                    <td>${informacionConsulta}</td>
                    <td>${historialMedico}</td>
                    <td>
                        <button class="btn btn-success" onclick="crearPlanAlimentacion(1)">Modificar</button>
 <button class="btn btn-danger" onclick="crearPlanAlimentacion(1)">Eliminar</button>

                `;
            tableBody.appendChild(newRow);

            // Limpiar el formulario y cerrar el modal
            document.getElementById('crearValoracionForm').reset();
            document.getElementById('crearValoracionModal').modal('hide');
        }
    </script>
</body>
</html>
