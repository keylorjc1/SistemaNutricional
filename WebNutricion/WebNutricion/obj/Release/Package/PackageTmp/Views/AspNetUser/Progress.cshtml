</head>
<body>
    <!-- ======= Header ======= -->
    <header id="header" class="header fixed-top d-flex align-items-center">
        <div class="d-flex align-items-center justify-content-between">
            <a href="@Url.Action("Index", "Adminstrador")" class="logo d-flex align-items-center">
                <img src="" alt="">
                <span class="d-none d-lg-block">Nutrición Sanabria</span>
            </a>

            <i class="fa-solid fa-bars toggle-sidebar-btn"></i>
        </div><!-- End Logo -->
        <nav class="header-nav ms-auto">
            <ul class="d-flex align-items-center">

                <li class="nav-item d-block d-lg-none">
                    <a class="nav-link nav-icon search-bar-toggle " href="#">
                        <i class="bi bi-search"></i>
                    </a>
                </li><!-- End Search Icon-->
                <li class="nav-item dropdown">

                </li><!-- End Messages Nav -->

                <li class="nav-item dropdown pe-3">

                    <a class="nav-link nav-profile d-flex align-items-center pe-0" href="#" data-bs-toggle="dropdown">
                        <span class="d-none d-md-block dropdown-toggle ps-2">M. Sanabria</span>
                    </a><!-- End Profile Iamge Icon -->

                    <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow profile">
                        <li class="dropdown-header">
                            <h6>Manuel Sanabria</h6>
                            <span>Nutricionista</span>
                        </li>
                        <li>
                            <hr class="dropdown-divider">
                        </li>

                        <li class="d-flex justify-content-center">
                            @Html.ActionLink("Mi Perfil", "Index", "User", routeValues: null, htmlAttributes: new { title = "Manage", @class = "nav-link dropdown-item d-flex align-items-center justify-content-center" })
                        </li>

                        <li>
                            <hr class="dropdown-divider">
                        </li>


                        <li>
                            <hr class="dropdown-divider">
                        </li>


                        <li>
                            <hr class="dropdown-divider">
                        </li>


                        @using Microsoft.AspNet.Identity

                        @if (Request.IsAuthenticated)
                        {
                            using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
                            {
                                @Html.AntiForgeryToken()

                                <li><a class="dropdown-item d-flex align-items-center" href="javascript:document.getElementById('logoutForm').submit()">Cerrar sesión</a></li>
                            }
                        }
                        else
                        {
                            <ul class="navbar-nav navbar-right">
                                <li>@Html.ActionLink("Iniciar sesión", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "nav-link" })</li>
                            </ul>
                        }


                    </ul><!-- End Profile Dropdown Items -->
                </li><!-- End Profile Nav -->

            </ul>
        </nav><!-- End Icons Navigation -->

    </header><!-- End Header -->
    <!-- ======= Sidebar ======= -->
    <aside id="sidebar" class="sidebar">

        <ul class="sidebar-nav" id="sidebar-nav">

            <li class="nav-item">
                <a class="nav-link " href="@Url.Action("Index", "Adminstrador")">
                    <i class="fa-solid fa-house"></i>
                    <span>Inicio</span>
                </a>
            </li><!-- End Dashboard Nav -->

            <li class="nav-item">
                <a class="nav-link" data-bs-target="#components-nav" data-bs-toggle="collapse" href="#">
                    <i class="fa-solid fa-pencil" ></i><span>Panel</span><i class="bi bi-chevron-down ms-auto fa-solid fa-circle-chevron-down"></i>
                </a>
                <ul id="components-nav" class="nav-content" data-bs-parent="#sidebar-nav">
                    <li>
                        @Html.ActionLink("Nueva Consulta", "Register", "Account", new { area = "" }, new { @class = "nav-link" })
                    </li>
                    <li>
                        @Html.ActionLink("Administrar Clientes", "Index", "AspNetUser", new { area = "" }, new { @class = "nav-link" })
                    </li>
                </ul>
            </li><!-- End Components Nav -->
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Index", "User")" >
                    <i class="fa-solid fa-user-doctor"></i>
                    <span>Perfil</span>
                </a>
            </li><!-- End Profile Page Nav -->


        </ul>

    </aside><!-- End Sidebar-->

    <main id="main" class="main">

        <!-- End Page Title -->

        <style>
            /* Estilos personalizados */
            .heading-section {
                color: #26798e; /* Color azul */
                text-align: center;
            }

                .heading-section h2 {
                    margin-top: 5px; /* Margen superior */
                }

                .heading-section h3 {
                    margin-top: 5px; /* Margen superior */
                }

            .border-left-plan {
                border-left: 0.25rem solid #26798e !important;
            }

            body {
                background-size: cover;
                background-repeat: no-repeat;
                background-position: center;
            }
        </style>

        <div style="margin-top: 150px;"></div>
        <div class=" text-center mb-5">
            <h3 class="heading-section mt-5 ">Progreso</h3>
        </div>
        <div>
            <div class="container">
                <div class="row justify-content-center align-items-start">
                    @if (Model.Item1.Any())
                    {
                        foreach (var item in Model.Item1)
                        {

                            <div class="col-xl-6 col-md-6 mb-4">
                                <div class="card border-left-plan shadow h-100 py-2">
                                    <div class="card-body">
                                        <h4 class=" style="color: #26798e;">Planificacion Nutricional:</h4>
                                        <div class="row no-gutters align-items-center">
                                            <div class="col mr-2">
                                                <div class="text mb-1" style="font-size: 14px; color: #26798e;">
                                                    Peso : @item.peso kg

                                                </div>
                                                <div class="text mb-1" style="font-size: 14px; color: #26798e;">
                                                    Altura: @item.altura cm
                                                </div>
                                                <div class="text mb-1" style="font-size: 14px; color: #26798e;">
                                                    IMC: @item.IMC %
                                                </div>
                                                <div class="text mb-1" style="font-size: 14px; color: #26798e;">
                                                    Grasa Corporal: @item.grasacorporal %
                                                </div>
                                                <div class="text mb-1" style="font-size: 14px; color: #26798e;">
                                                    Metabolismo Basal: @item.metabolismobasal
                                                </div>
                                                <div class="text mb-1" style="font-size: 14px; color: #26798e;">
                                                    Calorias Diarias: @item.caloriasdiarias kcal
                                                </div>
                                                <div class="text mb-1" style="font-size: 14px; color: #26798e;">
                                                    Proteinas: @item.proteinas %
                                                </div>
                                                <div class="text mb-1" style="font-size: 14px; color: #26798e;">
                                                    Carbohidratos: @item.carbohidratos %
                                                </div>
                                                <div class="text mb-1" style="font-size: 14px; color: #26798e;">
                                                    Grasas: @item.grasas %
                                                </div>
                                                <div class="text mb-1" style="font-size: 14px; color: #26798e;">
                                                    Objetivo: @item.objetivo
                                                </div>
                                                <div class="text mb-1" style="font-size: 14px; color: #26798e;">
                                                    Fecha: @item.fecha
                                                </div>
                                                <div class="text mb-1" style="font-size: 14px; color: #26798e; display: none;">
                                                    IdUser: @item.idUser
                                                </div>

                                            </div>
                                        </div>
                                        <div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        }
                    }
                    else
                    {
                        <p>No se ha encontrado registro del progreso asociados a esta usuario.</p>
                    }


                </div>

                <div class="col-md-6">
                    <a href="@Url.Action("index", "AspNetUser")" class="btn btn-lg btn-primary btn-block" style="background-color: #26798e; border-color: #26798e;">Regresar</a>
                </div>
            </div>
        </div>
        </div>
      

        <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

        <script src="~/assets/vendor/apexcharts/apexcharts.min.js"></script>
        <script src="~/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
        <script src="~/assets/vendor/chart.js/chart.umd.js"></script>
        <script src="~/assets/vendor/echarts/echarts.min.js"></script>
        <script src="~/assets/vendor/quill/quill.js"></script>
        <script src="~/assets/vendor/simple-datatables/simple-datatables.js"></script>
        <script src="~/assets/vendor/tinymce/tinymce.min.js"></script>
        <script src="~/assets/vendor/php-email-form/validate.js"></script>

        <script src="~/assets/js/main.js"></script>

</body>

</html>