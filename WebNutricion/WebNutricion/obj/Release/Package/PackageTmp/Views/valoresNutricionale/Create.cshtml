@model WebNutricion.Models.valoresNutricionale


        <section class="section">
            <div class="row">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Valores Nutricionales del paciente</h5>
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()


                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="row mb-3">
                                <label for="motivo" class="col-sm-2 col-form-label">Motivo de la consulta</label>
                                <div class="col-sm-10">
                                    @Html.TextAreaFor(model => model.motivo, new { @class = "form-control", style = "height: 100px; width: 100%;" })
                                    @Html.ValidationMessageFor(model => model.motivo, "", new { @class = "text-danger" })
                                </div>
                            </div>


                            <div class="row mb-3">
                                <label for="motivo" class="col-sm-2 col-form-label">Expectativas</label>
                                <div class="col-sm-10">
                                    @Html.TextAreaFor(model => model.expectativas, new { @class = "form-control", style = "height: 100px; width: 100%;" })
                                    @Html.ValidationMessageFor(model => model.expectativas, "", new { @class = "text-danger" })
                                </div>
                            </div>


                            <div class="row mb-3">
                                <label for="motivo" class="col-sm-2 col-form-label">Informacion Adicional</label>
                                <div class="col-sm-10">
                                    @Html.TextAreaFor(model => model.informacionConsulta, new { @class = "form-control", style = "height: 100px; width: 100%;" })
                                    @Html.ValidationMessageFor(model => model.informacionConsulta, "", new { @class = "text-danger" })
                                </div>
                            </div>


                            <div class="row mb-3">
                                <label for="motivo" class="col-sm-2 col-form-label">Historial Medico</label>
                                <div class="col-sm-10">
                                    @Html.TextAreaFor(model => model.historial, new { @class = "form-control", style = "height: 100px; width: 100%;" })
                                    @Html.ValidationMessageFor(model => model.historial, "", new { @class = "text-danger" })

                                </div>
                            </div>

                            <div class="form-group">
                                <texto>Fecha</texto>
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.fecha, new
                                    {
                                                htmlAttributes = new
                                        {
                                              @class = "form-control",
                                              @Value = DateTime.Now.ToShortDateString(),
                                              data_val = "false"
                                          }
                                      })
                                </div>
                            </div>
                            <br />

                            <div class="text mb-1" style="font-size: 14px; color: #26798e; display: none;">
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.idUser, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.idUser, "", new { @class = "text-danger" })
                                </div>
                            </div>


                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Guardar" class="btn btn-lg btn-primary btn-block" style="background-color: #26798e; border-color: #26798e;" />
                                </div>
                            </div>

                        }

                    </div>

                </div>
            </div>

        </section>
  
