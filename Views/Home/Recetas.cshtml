<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Tabla de Bootstrap con Funciones de Modificar y Eliminar</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

    <div class="container mt-5">
        <h2>Tabla de Recetas</h2>
        <button class="btn btn-primary mb-3" data-bs-toggle="modal" data-bs-target="#crearRecetaModal">Crear Receta</button>

        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Nombree</th>
                    <th>Foto</th>
                    <th>Ingredientes</th>
                    <th>Instrucciones</th>
                    <th>Datos Nutricionales</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                <!-- Aquí puedes agregar dinámicamente las filas con datos ingresados -->
            </tbody>
        </table>
    </div>

    <!-- Modal para Crear Receta -->
    <div class="modal fade" id="crearRecetaModal" tabindex="-1" aria-labelledby="crearRecetaModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="crearRecetaModalLabel">Crear Receta</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <!-- Formulario para ingresar datos -->
                    <form id="crearRecetaForm">
                        <div class="mb-3">
                            <label for="nombreReceta" class="form-label">Nombre:</label>
                            <input type="text" class="form-control" id="nombreReceta" required>
                        </div>
                        <div class="mb-3">
                            <label for="fotoReceta" class="form-label">Foto:</label>
                            <input type="text" class="form-control" id="fotoReceta" required>
                        </div>
                        <div class="mb-3">
                            <label for="ingredientesReceta" class="form-label">Ingredientes:</label>
                            <textarea class="form-control" id="ingredientesReceta" rows="3" required></textarea>
                        </div>
                        <div class="mb-3">
                            <label for="instruccionesReceta" class="form-label">Instrucciones:</label>
                            <textarea class="form-control" id="instruccionesReceta" rows="3" required></textarea>
                        </div>
                        <div class="mb-3">
                            <label for="datosNutricionalesReceta" class="form-label">Datos Nutricionales:</label>
                            <input type="text" class="form-control" id="datosNutricionalesReceta" required>
                        </div>
                        <button type="button" class="btn btn-primary" onclick="guardarReceta()">Guardar</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script>
    function guardarReceta() {
        const nombreReceta = document.getElementById('nombreReceta').value;
        const fotoReceta = document.getElementById('fotoReceta').value;
        const ingredientesReceta = document.getElementById('ingredientesReceta').value;
        const instruccionesReceta = document.getElementById('instruccionesReceta').value;
        const datosNutricionalesReceta = document.getElementById('datosNutricionalesReceta').value;

        // Validación de datos (puedes agregar más validaciones según tus necesidades)

        // Agregar la fila a la tabla
        const tableBody = document.querySelector('table tbody');
        const newRow = document.createElement('tr');
        newRow.innerHTML = `
            <td>${nombreReceta}</td>
            <td>${fotoReceta}</td>
            <td>${ingredientesReceta}</td>
            <td>${instruccionesReceta}</td>
            <td>${datosNutricionalesReceta}</td>
            <td>
                <button class="btn btn-warning" onclick="modificarReceta(this)">Modificar</button>
                <button class="btn btn-danger" onclick="eliminarReceta(this)">Eliminar</button>
            </td>
        `;
        tableBody.appendChild(newRow);

        // Limpiar el formulario y cerrar el modal
        document.getElementById('crearRecetaForm').reset();
        document.getElementById('crearRecetaModal').modal('hide');
    }

    function modificarReceta(button) {
        const row = button.closest('tr');
        const cells = row.getElementsByTagName('td');

        // Obtener los valores de la fila
        const nombre = cells[0].innerText;
        const foto = cells[1].innerText;
        const ingredientes = cells[2].innerText;
        const instrucciones = cells[3].innerText;
        const datosNutricionales = cells[4].innerText;

        // Puedes utilizar estos valores para llenar el formulario de modificación

        // Por ejemplo, aquí mostramos una alerta con los valores (puedes reemplazar esto con tu lógica de modificación real)
        alert(`Modificar Receta:\nNombre: ${nombre}\nFoto: ${foto}\nIngredientes: ${ingredientes}\nInstrucciones: ${instrucciones}\nDatos Nutricionales: ${datosNutricionales}`);
    }

    function eliminarReceta(button) {
        const row = button.closest('tr');
        row.remove();
    }
    </script>
</body>
</html>
