
@{
    ViewBag.Title = "DatosAntropometricos";
}

<h2>DatosAntropometricos</h2>
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Tabla de Bootstrap con Entrada de Datos</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark">
        <div class="container">
            @Html.ActionLink("Panel Nutricional", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Alternar navegación" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">

                    <li>@Html.ActionLink("ValoresNutricionales", "ValoresNutricionales", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("DatosAntropometricos", "DatosAntropometricos", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Planificacion Nutricional", "PlanificacionNutricional", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Plan de alimentacion", "PLanDeAlimentacion", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container mt-5">
        <h2>Tabla de Mediciones</h2>
        <button class="btn btn-primary mb-3" data-bs-toggle="modal" data-bs-target="#crearMedicionesModal">Crear Mediciones</button>

        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Datos Antropométricos</th>
                    <th>Datos Analíticos</th>
                    <th>Progreso</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                <!-- Aquí puedes agregar dinámicamente las filas con datos ingresados -->
            </tbody>
        </table>
    </div>

    <!-- Modal para Crear Mediciones -->
    <div class="modal fade" id="crearMedicionesModal" tabindex="-1" aria-labelledby="crearMedicionesModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="crearMedicionesModalLabel">Crear Mediciones</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <!-- Formulario para ingresar datos -->
                    <form id="crearMedicionesForm">
                        <div class="mb-3">
                            <label for="datosAntropometricos" class="form-label">Datos Antropométricos:</label>
                            <input type="text" class="form-control" id="datosAntropometricos" required>
                        </div>
                        <div class="mb-3">
                            <label for="datosAnaliticos" class="form-label">Datos Analíticos:</label>
                            <input type="text" class="form-control" id="datosAnaliticos" required>
                        </div>
                        <div class="mb-3">
                            <label for="progreso" class="form-label">Progreso:</label>
                            <input type="text" class="form-control" id="progreso" required>
                        </div>
                        <button type="button" class="btn btn-primary" onclick="guardarMediciones()">Guardar</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function guardarMediciones() {
            const datosAntropometricos = document.getElementById('datosAntropometricos').value;
            const datosAnaliticos = document.getElementById('datosAnaliticos').value;
            const progreso = document.getElementById('progreso').value;
            const tableBody = document.querySelector('table tbody');
            const newRow = document.createElement('tr');
            newRow.innerHTML = `
                <td>${datosAntropometricos}</td>
                <td>${datosAnaliticos}</td>
                <td>${progreso}</td>
                <td>
                   <button class="btn btn-success" onclick="crearPlanAlimentacion(1)">Modificar</button>
 <button class="btn btn-danger" onclick="crearPlanAlimentacion(1)">Eliminar</button>

                </td>
            `;
            tableBody.appendChild(newRow);
            document.getElementById('crearMedicionesForm').reset();
            document.getElementById('crearMedicionesModal').modal('hide');
        }
    </script>
</body>
</html>

