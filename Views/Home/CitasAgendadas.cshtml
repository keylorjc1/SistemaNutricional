<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <title>Visualizar Citas Reservadas</title>
</head>
<body>

    <div class="container mt-4">
        <h2>Visualizar Citas Reservadas</h2>

        <div class="row">
            <div class="col-md-6">
                <h3>Lista de Citas Reservadas</h3>
                <ul id="citasReservadasList" class="list-group">
                  
                    <li class="list-group-item" data-nombre="Juan" data-apellidos="Pérez González" data-correo="juan@example.com" data-telefono="555-1234">
                        <span class="font-weight-bold">Fecha:</span> 2023-12-01
                        <span class="ml-3 font-weight-bold">Hora:</span> 10:00 AM
                        <button type="button" class="btn btn-success btn-sm ml-2">Ver cita</button>

                        <button type="button" class="btn btn-warning btn-sm ml-2" onclick="modificarCita(this)">Modificar</button>
                        <button type="button" class="btn btn-danger btn-sm ml-2" onclick="eliminarCita(this)">Eliminar</button>
                    </li>
                
                </ul>
             
            </div>

            <div class="col-md-6">
                <h3>Detalles del Usuario</h3>
                <form>
                    <div class="form-group">
                        <label for="nombre">Nombre:</label>
                        <input type="text" class="form-control" id="nombre" disabled>
                    </div>
                    <div class="form-group">
                        <label for="apellidos">Apellidos:</label>
                        <input type="text" class="form-control" id="apellidos" disabled>
                    </div>
                    <div class="form-group">
                        <label for="correo">Correo:</label>
                        <input type="email" class="form-control" id="correo" disabled>
                    </div>
                    <div class="form-group">
                        <label for="telefono">Teléfono:</label>
                        <input type="tel" class="form-control" id="telefono" disabled>
                    </div>


                </form>

                <h3 class="mt-4">Detalles de la Cita</h3>
                <form>
                    <div class="form-group">
                        <label for="fechaReservada">Fecha:</label>
                        <input type="text" class="form-control" id="fechaReservada" disabled>
                    </div>
                    <div class="form-group">
                        <label for="horaReservada">Hora:</label>
                        <input type="text" class="form-control" id="horaReservada" disabled>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <script>
        // Mostrar citas reservadas en la lista
        var citasReservadasList = document.getElementById('citasReservadasList');
        citasReservadas.forEach(function (cita) {
            var listItem = document.createElement('li');
            listItem.className = 'list-group-item';
            listItem.setAttribute('data-nombre', cita.nombre);
            listItem.setAttribute('data-apellidos', cita.apellidos);
            listItem.setAttribute('data-correo', cita.correo);
            listItem.setAttribute('data-telefono', cita.telefono);
            listItem.innerHTML = `<span class="font-weight-bold">Fecha:</span> ${cita.fecha}
                                  <span class="ml-3 font-weight-bold">Hora:</span> ${cita.hora}
                                  <button type="button" class="btn btn-warning btn-sm ml-2" onclick="modificarCita(this)">Modificar</button>
                                  <button type="button" class="btn btn-danger btn-sm ml-2" onclick="eliminarCita(this)">Eliminar</button>`;
            citasReservadasList.appendChild(listItem);
        });

        // Mostrar detalles del usuario y la cita reservada al hacer clic en la lista
        citasReservadasList.addEventListener('click', function (event) {
            var listItem = event.target.closest('li');
            if (listItem) {
                var nombre = listItem.getAttribute('data-nombre');
                var apellidos = listItem.getAttribute('data-apellidos');
                var correo = listItem.getAttribute('data-correo');
                var telefono = listItem.getAttribute('data-telefono');
                var fechaReservada = listItem.querySelector('.font-weight-bold:nth-child(1)').nextSibling.nodeValue.trim();
                var horaReservada = listItem.querySelector('.font-weight-bold:nth-child(3)').nextSibling.nodeValue.trim();

                document.getElementById('nombre').value = nombre;
                document.getElementById('apellidos').value = apellidos;
                document.getElementById('correo').value = correo;
                document.getElementById('telefono').value = telefono;
                document.getElementById('fechaReservada').value = fechaReservada;
                document.getElementById('horaReservada').value = horaReservada;


            }
        });

        // Función para modificar una cita
        function modificarCita(btnModificar) {
            var citaReservada = btnModificar.parentNode;
            // Puedes implementar la lógica para modificar la cita según tus necesidades
            // En este ejemplo, simplemente mostraremos una alerta
            alert('Función de modificación de cita');
        }

        // Función para eliminar una cita
        function eliminarCita(btnEliminar) {
            var citaReservada = btnEliminar.parentNode;
            citaReservada.parentNode.removeChild(citaReservada);
        }
    </script>
    <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
        <ul class="navbar-nav flex-grow-1">
            <li>@Html.ActionLink("Regresar", "Citas", "Home", new { area = "" }, new { @class = "btn btn-success" })</li>
        </ul>
    </div>
</body>
</html>
