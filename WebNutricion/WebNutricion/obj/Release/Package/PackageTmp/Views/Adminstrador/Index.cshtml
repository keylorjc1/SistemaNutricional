

<section class="section">
    <div class="row align-items-top">
        <div class="col-lg-6">
            <!-- Card with an image on left -->
            <div class="card mb-3">
                <div class="row g-0">
                    <div class="col-md-4">
                        <img src="https://images.ctfassets.net/63bmaubptoky/njCWUHVHZYRZNIOQMSwx9I5NLWNw8KQu1_Ne-ZEgd0s/5c370fd12e2e36c6379cbab073f93a31/Que-es-la-telemedicina.png" class="img-fluid rounded-start" alt="...">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">Nueva Consulta</h5>
                            <p class="card-text">Registra datos de un nuevo cliente</p>
                        </div>
                    </div>
                    <div class="d-grid gap-2 mt-3">
                        @Html.ActionLink("Nueva Consulta", "Register", "Account", new { area = "" }, new { @class = "btn btn-outline-primary" })
                    </div>
                </div>
            </div>
            <hr>
            <div class="card mb-3">
                <div class="row g-0">
                    <div class="col-md-4">
                        <img src="https://assets1.farmaciasanpablo.com.mx/landings/_blog/consultorio/consulta-nutricional-para-que-sirve.jpg" class="img-fluid rounded-start" alt="...">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">Administrar Clientes</h5>
                            <p class="card-text">Gestiona los datos de tu cliente.</p>
                        </div>

                    </div>
                    <div class="d-grid gap-2 mt-3">
                        @Html.ActionLink("Administrar", "Index", "AspNetUser", new { area = "" }, new { @class = "btn btn-outline-primary" })


                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-5">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Funciones</h5>
                    <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
                        <div class="carousel-indicators">
                            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
                        </div>
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img src="https://uploads-ssl.webflow.com/5c61cd15277e33ee92aa6da7/5e17696a6325efd2f3575308_Consulta%20nutricionales%20individualizadas.jpg" class="d-block w-100" alt="...">
                                <div class="carousel-caption d-none d-md-block">
                                    <h5>Realizar Consultas</h5>
                                    <p>Agrega los datos de cada cliente con sus respectivas mediciones.</p>
                                </div>
                            </div>
                            <div class="carousel-item">
                                <img src="https://d34u8crftukxnk.cloudfront.net/slackpress/prod/sites/6/How-8-Tech-Organizations-Use-Slack-To-Get-Work-Done-Hero-670x500%402x-2.jpg?d=500x500&f=inside" class="d-block w-100" alt="...">
                                <div class="carousel-caption d-none d-md-block">
                                    <h5>Editar pacientes</h5>
                                    <p>Edita los datos del paciente en cualquier momento.</p>
                                </div>
                            </div>

                        </div>

                        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </button>

                    </div>
                </div>
            </div>
</section>



<a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>




